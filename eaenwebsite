  <script>
    // simple cart using localStorage
    const CART_KEY = 'earn_site_cart_v1';
    function loadCart(){try{const raw = localStorage.getItem(CART_KEY); return raw?JSON.parse(raw):[];}catch(e){return []}}
    function saveCart(c){localStorage.setItem(CART_KEY,JSON.stringify(c));renderCart();}
    function addToCart(item){const c = loadCart(); const found = c.find(x=>x.id===item.id); if(found){found.qty++;}else{c.push({...item,qty:1})} saveCart(c); alert(item.title + ' added to cart');}
    function renderCart(){const c = loadCart(); const container = document.getElementById('cart-items'); container.innerHTML=''; let total=0; c.forEach(i=>{ const div=document.createElement('div'); div.className='cart-item'; div.innerHTML=`<div>${i.title} x ${i.qty}</div><div>₹${i.price*i.qty}</div>`; container.appendChild(div); total += i.price*i.qty; }); document.getElementById('cart-total').innerText = '₹'+total; document.getElementById('cart-count').innerText = c.reduce((s,x)=>s+x.qty,0);}
    function toggleCart(){const m=document.getElementById('cart-modal'); m.style.display = m.style.display==='block'?'none':'block'; renderCart();}
    function clearCart(){localStorage.removeItem(CART_KEY); renderCart();}
    function checkout(){const c=loadCart(); if(c.length===0){alert('Cart is empty'); return;} const total = c.reduce((s,x)=>s+x.price*x.qty,0); // For demo, redirect to PayPal.me — you should replace with real checkout
      const message = 'Total: ₹'+total+'\nYou will be redirected to a payment link. After payment, contact the seller with the order details.';
      if(confirm(message)){ // redirect to a placeholder; change to your PayPal.me or Razorpay/Stripe host
        // Build a quick label so user knows
        const payLink = 'https://paypal.me/yourname/'+Math.round(total);
        window.open(payLink,'_blank');
      }}

    // contact form — simple mailto fallback
    function sendMessage(e){e.preventDefault(); const name=document.getElementById('name').value; const email=document.getElementById('email').value; const message=document.getElementById('message').value; const subject = encodeURIComponent('Website contact from '+name); const body = encodeURIComponent('Name: '+name+'\nContact: '+email+'\n\n'+message); const mailto = 'mailto:youremail@example.com?subject='+subject+'&body='+body; window.location.href = mailto; }

    function scrollToSection(id){document.getElementById(id).scrollIntoView({behavior:'smooth'});}
    // initialize
    document.addEventListener('DOMContentLoaded',()=>{renderCart();});
  </script>
